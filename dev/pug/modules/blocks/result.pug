        //- Доступность финансирования
        .report__order.r-ability 
            h3.r-ability__title Доступно факторинговое финансирование контрактов с ООО «Ромашка»
            ul.r-ability__list
                each i in abilityList
                    li.r-ability__list-item=i
            button(type="button").r-ability__submit Оставить заявку
       
        //- Общая информация
        .result__general.r-general
            h3.r-general__title Общая информация
            ul.r-general__list
                for i in generalList
                    li.r-general__list-item
                        span.r-general__list-name=i.name 
                        b.r-general__list-data=i.data
                        if i.begin
                            span.r-general__list-start=i.begin
        
        //- Факты о компании
        .result__facts.r-facts
            h3.r-facts__title Факты о&nbsp;компании
            ul.r-facts__stats
                li(data-type="positive").r-facts__stats-item
                    span.r-facts__stats-name Положительные
                    b.r-facts__stats-nr 6
                li(data-type="attention").r-facts__stats-item
                    span.r-facts__stats-name Требуют внимания
                    b.r-facts__stats-nr 1
            ul.r-facts__list
                for i in reportFacts
                    li(data-type="" +i.status).r-facts__list-item
                        span.r-facts__list-name=i.name
                        b.r-facts__list-data=i.data
            button(type="button").r-facts__expand Подробнее
        
        //- Виды деятельности
        .result__activities.r-activities
            h3.r-activities__title.section-subtitle Виды деятельности

            .r-activities__wrap
                .r-activities__item
                    b.r-activities__subtitle Основной ОКВЭД

                    ul.r-activities__list 
                        li.r-activities__list-item 
                            b 62.01 
                            span — Разработка компьютерного программного обеспечения
                .r-activities__item
                    b.r-activities__subtitle Дополнительные
                    
                    ul.r-activities__list
                        for i in actList
                            li.r-activities__list-item
                                b=i.nr + " "
                                span="— " +i.data
                    button(type="button").r-activities__expand Подробнее