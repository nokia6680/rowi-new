include ../helpers/mixins
block variables

doctype html
html(lang="ru-RU")
    head
        meta(charset="utf-8")
        title #{title}
        <!--[if IE]>
        meta(http-equiv='X-UA-Compatible', content="IE = edge")
        <![endif]-->
        meta(name="viewport" content="width=device-width,initial-scale=1")
        meta(name="format-detection" content="telephone=no")
        meta(name="keywords" content="")
        link(rel="stylesheet" type='text/css' href="static/css/styles.css")
        link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-180.png")
        link(rel="icon" type="image/png" sizes="32x32" href="/favicon_32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="/favicon_16x16.png")
        link(rel="mask-icon" href="/favicon_32x32.svg" color="#5bbad5")
        link(rel="icon" href="/favicon_32x32.svg" sizes="any" type="image/svg+xml") 
        meta(name="theme-color" content="#ffffff")
        //test ver only
        meta(name="robots" content="noindex")
        //end of test ver only
    body.body
        include ../modules/header/header
        main.main
            include ../modules/blocks/check
            include ../modules/blocks/result
        include ../modules/footer/footer
        <!--New FORM result-callback-->
        .popup-callback.js-popup-wrap#js-result-callback
            .popup-callback__wrapper.js-popup-inner
                button(type="button").popup-callback__closer.js-popup-closer
                
                h3.popup-callback__title Перезвоним и все расскажем, оставьте номер телефона
                p.popup-callback__description
                
                form(method="post" action="" name="callbackForm_result").popup-callback__form.callback-form
                    .callback-form__item
                        input(type="tel" name="callback-form-result" id="callback-form-result" placeholder="Ваш номер телефона" onkeydown="validationCallbackTel()" required).callback-form__input.js-phone-input
                        span.callback-form__error
                    button(type="sumit").callback-form__submit Отправить
                    span.callback-form__agree Нажимая кнопку, вы соглашаетесь на 
                        a(href="" target="_blank") обработку персональных данных
        <!--Old form for callback-->
        include ../modules/blocks/popup-callback
        script(src="static/js/vendor/jquery-3.3.1.min.js")
        script(src="static/js/main.js")
        script(src="static/js/header-drop.js")
        script(src="static/js/observer.js")
        script(src="static/js/table-inner.js")
        block script
